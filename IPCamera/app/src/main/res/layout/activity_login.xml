<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <RelativeLayout
        android:id="@+id/rl_login"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="16sp"
                />
        </LinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_121212"
            android:text="人脸注册"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/col_333333"
        />
    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/camera_user"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_title_size" />

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:maxLength="20"
             android:hint="请输入用户名"
            android:lines="1" >
        </EditText>
    </LinearLayout>
<Button
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/ll_user"
    android:layout_marginTop="20dp"
    android:layout_gravity="center_horizontal"
    android:id="@+id/btn_uploadFile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/col_10DB9F"
    android:text="上传图片"/>
    <ProgressBar
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/pb_login"
        android:layout_width="150dp"
        android:layout_height="150dp"
      />
</RelativeLayout>
