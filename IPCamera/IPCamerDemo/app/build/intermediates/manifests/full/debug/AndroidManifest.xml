<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ipcamer.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name=" android.permission.ACCESS_WIFI_STATE " />
    <uses-feature android:name="android.permission.CHANGE_WIFI_STATE " />
    <uses-feature android:name="android.permission.WAKE_LOCK" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:name="com.ipcamera.demo.MyApplication"
        android:icon="@drawable/app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ipcamera.demo.LinkCameraSettingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ipcamera.demo.AddCameraActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Add Camera"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ipcamera.demo.PlayBackTFActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ipcamera.demo.PlayBackActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" />
        <activity android:name="com.ipcamera.demo.LocalPictureAndVideoActivity" />
        <activity android:name="com.ipcamera.demo.SettingActivity" />
        <activity android:name="com.ipcamera.demo.SettingUserActivity" />
        <activity android:name="com.ipcamera.demo.SettingSDCardActivity" />
        <activity android:name="com.ipcamera.demo.LocalVideoGridActivity" />
        <activity android:name="com.ipcamera.demo.SettingDateActivity" />
        <activity android:name="com.ipcamera.demo.SettingAlarmActivity" />
        <activity android:name="com.ipcamera.demo.FirmwareUpdateActiviy" />
        <activity android:name="com.ipcamera.demo.SensorListActivty" />
        <activity android:name="com.ipcamera.demo.SensorStartCodeActivity" />
        <activity android:name="com.ipcamera.demo.EditSensorActivity" />
        <activity android:name="com.ipcamera.demo.ShowLocalVideoActivity" />
        <activity android:name="com.ipcamera.demo.LoginActivity" />
        <activity
            android:name="cn.finalteam.rxgalleryfinal.ui.activity.MediaActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ipcamera.demo.PlayActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="play" />
        <activity
            android:name="com.ipcamera.demo.SettingWifiActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="WifiSetting"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ipcamera.demo.StartActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.ipcamera.demo.BridgeService" />
        <service android:name="com.ipcamera.demo.service.MsgService" />
        <service android:name="com.ipcamera.demo.service.BrainLinkService" />

        <activity
            android:name="com.yanzhenjie.permission.PermissionActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="standard"
            android:theme="@style/permission_PermissionActivity"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />
    </application>

</manifest>